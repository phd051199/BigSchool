@model BigSchool.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Heading</h2>
@using (Html.BeginForm(Model.Action, "Courses"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <p>@Html.LabelFor(m => m.Place)</p>
        @Html.DisplayFor(m => m.Place)

    </div>
    <div class="form-group">
        <p>@Html.LabelFor(m => m.Date)</p>
        @Html.DisplayFor(m => m.Date)

    </div>
    <div class="form-group">
        <p>@Html.LabelFor(m => m.Time)</p>
        @Html.DisplayFor(m => m.Time)
    </div>
    <div class="form-group">
        <p>@Html.LabelFor(m => m.Category)</p>
        @Html.DisplayFor(m => m.Category)
    </div>
}
